[alias]
	co = checkout
  br = branch
  ci = commit
  aa = add .
  st = status
  unstage = reset HEAD --
  ps = push
  pl = pull
  lgp = log --pretty=oneline
  r = remote
  lgg = log --graph --pretty=format:'%C(green)%h%Creset  %s'
  l = log --graph --pretty=format':%C(green)%h%Cblue%d%Creset %s %C(cyan dim) %an, %ar%Creset'
  psod = push origin development
  ft = fetch
  mod = merge origin/development
[core]
  editor = vim
	excludesfile = ~/.gitignore_global

[status]
  submodule = 1

[color]
  branch = auto
  diff = auto
  status = auto
  ui = true
[user]
	name = Yang-Hsing Lin
	email = yanghsing.lin@gmail.com

[init]
	templatedir = ~/.dot_files/git_template

[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX
