[alias]
	co = checkout
  br = !git --no-pager branch
  ci = commit
  aa = add .
  st = status
  unstage = reset HEAD --
  ps = push
  pl = pull
  lgp = log --pretty=oneline
  r = remote
  lgg = log --graph --pretty=format:'%C(green)%h%Creset  %s'
  l = log --graph --pretty=format':%C(green)%h%Cblue%d%Creset %s %C(cyan dim) %an, %ar%Creset'
  psod = push origin development
  ft = fetch
  mod = merge origin/development
[core]
  editor = nvim
	excludesfile = ~/.gitignore_global
  # pager = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less

[status]
  submodule = 1

[color]
  branch = auto
  diff = auto
  status = auto
  ui = true
